# Creation of main window
<MainButtons>:
        BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.1
                size_hint_y: 0.3

                Button:
                        text: '+'
                        on_press: root.add_click()
                        size_hint_x: 1
                        size_hint_y: 1
                Button:
                        text: '!'
                        on_press: root.alerts_click()
                        size_hint_x: 1
                        size_hint_y: 1
                Button:
                        text: 'G'
                        on_press: root.gps_click()
                        size_hint_x: 1
                        size_hint_y: 1

<CameraClick>:
        orientation: 'vertical'
        Camera:
                id: camera
                resolution: (640, 480)
                play: False
        ToggleButton:
                text: 'Play'
                on_press: camera.play = not camera.play
                size_hint_y: None
                height: '48dp'
        Button:
                text: 'Capture'
                size_hint_y: None
                height: '48dp'
                on_press: root.capture()

<ReportScreen>:
        BoxLayout:
                orientation: 'vertical'
                Button:
                        text: 'Report seen animal'
                        on_press: root.manager.current = 'Camera Screen'
                Button:
                        text: 'Report lost animal'
                        on_press: root.manager.current = 'Lost Animal Screen'
                Button:
                        text: 'Go back'
                        on_press: root.manager.current = 'Main Screen'

<CameraScreen>:
        BoxLayout:
                orientation: 'vertical'
                Camera:
                        id: camera
                        resolution: (640, 480)
                        play: True
                Button:
                        text: 'Capture'
                        size_hint_y: None
                        height: '48dp'
                        on_press: root.capture()
                Button:
                        text: 'Bo back'
                        size_hint_y: None
                        height: '48dp'
                        on_press: root.manager.current = 'Report Screen'

<AnimalDescriptionScreen>:
        BoxLayout:
                orientation: 'vertical'
                Label:
                        id: animal_type
                        text: 'Recognized animal: '
                Label: 
                        id: animal_description
                        text: 'Description: '
                Label:
                        id: is_dangerous
                        text: 'Dangerous?: '
                Button:
                        text: 'Bo back'
                        size_hint_y: None
                        height: '48dp'
                        on_press: root.manager.current = 'Report Screen'

<LostAnimalScreen>:
        FloatLayout:
                BoxLayout:
                        orientation: 'vertical'
                        Button:
                                text: 'Upload photo'
                                on_press: root.photo_upload()
                        Label:
                                text: 'Animal type'
                        TextInput:
                                id: animal_type

                        Label:
                                text: 'Animal name'
                        TextInput

                        Label:
                                text: 'Last seen'
                        TextInput

                        Label:
                                text: 'Additional information'
                        TextInput

                        Button:
                                text: 'Send'
                                on_press: root.manager.current = 'Main Screen'
                        Button:
                                text: 'Go back'
                                on_press: root.manager.current = 'Report Screen'

<LoadDialog>:
        BoxLayout:
                size: root.size
                pos: root.pos
                orientation: "vertical"
                FileChooserListView:
                        id: filechooser
                        rootpath: '.\\'

                BoxLayout:
                        size_hint_y: None
                        height: 30
                        Button:
                                text: "Cancel"
                                on_release: root.cancel()

                        Button:
                                text: "Load"
                                on_release: root.load(filechooser.path, filechooser.selection)